<div class="painel col-md-offset-3 col-md-6 col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
  <%= image_tag 'corrente.png', class: 'corrente' %>
  <div id="location">
    <h3>Participe enviando sua localização e divulgando o projeto!</h3>
    <br>
    <div class="row">
      <div class="col-lg-12 text-center">
        <button id="btn-participate" type="button" name="button" class="botao">Participar</button>
      </div>
    </div>
  </div>
</div>

<%= content_for :javascript do %>
  <script type='text/javascript'>
    $("#btn-participate").click(function(){
      window.location = "<%= fix_path(geolocation_path) %>";
    });
  </script>
<% end %>
