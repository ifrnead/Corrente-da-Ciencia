<div class="painel col-md-offset-1 col-md-10 col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
  <h1 class="text-center">Entre em contato</h1>
  <% if notice.present? %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <%= simple_form_for(@message, url: fix_path(contact_path)) do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :name, label: false, placeholder: 'Nome *', input_html: { class: 'input-lg' } %>
        <%= f.input :email, label: false, placeholder: 'Email *', input_html: { class: 'input-lg' } %>
        <%= f.input :content, as: :text, label: false, placeholder: 'Mensagem *', input_html: { class: 'input-lg' } %>
      </div>
      <div class="col-lg-12 text-center">
        <%= f.submit "Enviar Mensagem", class: 'botao' %>
      </div>
    </div>
  <% end %>
</div>
