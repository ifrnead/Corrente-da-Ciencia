<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Entre em contato</h2>
        <h3 class="section-subheading text-muted"></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form_for @message, url: contact_path do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :name, placeholder: "Nome *", class: 'form-control' %>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <%= f.email_field :email, placeholder: "Email *", class: 'form-control' %>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <%= f.telephone_field :phone, placeholder: "Celular *", class: 'form-control', data: {mask:'(99)99999-9999'} %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_area :content, placeholder: "Mensagem *", class: 'form-control' %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <%= f.submit "Enviar Mensagem", class: 'btn btn-xl' %>
              <div class="form-group"></div>
                <div id="success">
                  <div class="col-md-6 col-md-offset-3">
                    <% flash.each do |key, value| %>
                        <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
                    <% end %>
                  </div>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>