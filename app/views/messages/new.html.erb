<div class="painel col-md-offset-1 col-md-10 col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
  <h1 class="text-center">Entre em contato</h1>
  <%= form_for @message, url: contact_url do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Nome *", class: 'form-control input-lg' %>
          <p class="help-block text-danger"></p>
        </div>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email *", class: 'form-control input-lg' %>
          <p class="help-block text-danger"></p>
        </div>
        <div class="form-group">
          <%= f.text_area :content, placeholder: "Mensagem *", class: 'form-control input-lg' %>
          <p class="help-block text-danger"></p>
        </div>
      </div>
      <div class="col-lg-12 text-center">
        <%= f.submit "Enviar Mensagem", class: 'botao' %>
      </div>
    </div>
  <% end %>
</div>
